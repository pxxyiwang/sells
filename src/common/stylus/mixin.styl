border-1px($color)
  position: relative;
  &::after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100% // 需要横向撑开边框宽度
    border-top: 1px solid $color
    content: " " //afterhuozhe before使用的时候，不传入东西也要填一个空字符

bg-image($url)
  background-image: url("./image/" + $url + "@2x.png")
  @media (-webit-min--pixel-ratio: 3),(min-device-ratio: 3)
    background-image: url("./image/" + $url + "@3x.png")